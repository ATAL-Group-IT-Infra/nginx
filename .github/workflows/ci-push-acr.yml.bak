name: Build and Push Nginx to ACR

on:
  push:
    branches:
      - main  # Runs the workflow when pushing to main branch

jobs:
  build-and-push:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v3

      - name: Login to Azure
        uses: azure/login@v1
        with:
          creds: ${{ secrets.AZURE_CREDENTIALS }}

      - name: Login to Azure Container Registry
        run: |
          echo ${{ secrets.ACR_PASSWORD }} | docker login ${{ secrets.ACR_LOGIN_SERVER }} -u ${{ secrets.ACR_USERNAME }} --password-stdin

      - name: Pull Official Nginx Image
        run: docker pull nginx:latest

      - name: Tag Image for ACR
        run: |
          docker tag nginx:latest ${{ secrets.ACR_LOGIN_SERVER }}/nginx:latest
          docker tag nginx:latest ${{ secrets.ACR_LOGIN_SERVER }}/nginx:${{ github.sha }}

      - name: Push Image to ACR
        run: |
          docker push ${{ secrets.ACR_LOGIN_SERVER }}/nginx:latest
          docker push ${{ secrets.ACR_LOGIN_SERVER }}/nginx:${{ github.sha }}

      - name: Logout from Docker
        run: docker logout ${{ secrets.ACR_LOGIN_SERVER }}
