name: Build and Push Nginx to ACR

on:
  push:
    branches:
      - main  # Runs when changes are pushed to main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:

      # Checkout repository
      - name: Checkout code
        uses: actions/checkout@v4

      # Log in to Azure
      - name: Azure Login
        uses: azure/login@v2
        with:
          creds: ${{ secrets.AZURE_CREDENTIALS }}

      # Log in to Azure Container Registry
      - name: Log in to ACR
        run: az acr login --name ${{ secrets.ACR_NAME }}

      # Build and Push Docker Image to ACR
      - name: Build and Push Docker Image
        run: |
          IMAGE_NAME=${{ secrets.ACR_NAME }}.azurecr.io/nginx-custom:latest
          docker build -t $IMAGE_NAME .
          docker push $IMAGE_NAME

      # deploy to azure container apps
      - name: Deploy to Azure Container Apps
        run: |
          az containerapp update \
            --name ${{ secrets.CONTAINER_APP_NAME }} \
            --resource-group ${{ secrets.RESOURCE_GROUP }} \
            --subscription ${{ secrets.SUBSCRIPTION_ID }} \
            --image ${{ secrets.ACR_NAME }}.azurecr.io/nginx-custom:latest