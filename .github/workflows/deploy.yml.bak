name: Deploy Nginx to Azure Container App

on:
  workflow_run:
    workflows: ["Build and Push Nginx to ACR"]
    types:
      - completed

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Azure Login (Dev Tenant - Container App)
        uses: azure/login@v2
        with:
          creds: ${{ secrets.AZURE_CREDENTIALS }}

      - name: Deploy to Azure Container Apps
        run: |
          az containerapp update \
            --name ${{ secrets.CONTAINER_APP_NAME }} \
            --resource-group ${{ secrets.RESOURCE_GROUP }} \
            --image ${{ secrets.ACR_PROD_NAME }}.azurecr.io/nginx:latest \
            --registry-server ${{ secrets.ACR_PROD_NAME }}.azurecr.io \
            --registry-username ${{ secrets.ACR_PROD_CLIENT_ID }} \
            --registry-password ${{ secrets.ACR_PROD_CLIENT_SECRET }}
